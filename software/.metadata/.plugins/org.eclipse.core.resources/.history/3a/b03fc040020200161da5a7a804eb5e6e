#ifndef IMAGE_H_
#define IMAGE_H_

#include "common.h"
#include "bitmapSD.h"

/* iInfo
 *   size:    Half-Word(16bit) Size
 *   cRes:    Color Resolution (MONO1, RGB16)
 *   width:   Image Half-Word Width
 *   height:  Image Pixel Height
 *   address: SDRAM Storage Location
 */
typedef struct  _iInfo{
	uint32_t size;
	uint8_t cRes;
	uint16_t width;
	uint16_t height;
	uint32_t address;
} iInfo;

typedef struct iImage


#endif /* IMAGE_H_ */
