uint8_t isBusy()
{
	return (IORD(LCDFRAMEBUFFER_0_BASE, 0) & 0x2);
}

void refreshScreen()
{
	IOWR(LCDFRAMEBUFFER_0_BASE, 0, 0);
}

char* weekdays[7] = { "Sunday",
					  "Monday",
					  "Tuesday",
					  "Wednesday",
					  "Thursday",
					  "Friday",
					  "Saturday"
};

int main()
{
	int holder;
	printf("hello from main\n");

	IOWR(LCDFRAMEBUFFER_0_BASE, 3, 1);
	holder = IORD(LCDFRAMEBUFFER_0_BASE, 3);


	initDrivers();

	//writeHour(0x5|STANDARDTIME|PM);

	displayTouch();


	return 0;
}


void initDrivers()
{
	IOWR(LCDFRAMEBUFFER_0_BASE, 1, 8);
	initTouchI2C();
	if (sdMount() != 0)
		while(1);
	if (initFontMap("FONT    ", "BMP") != 0)
		while(1);
}

